@model IEnumerable<AnurStore.Application.DTOs.ProductPurchaseDto>
@{
    ViewData["Title"] = "Product Purchase List";
    Layout = "_DashboardLayout";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div class="d-flex flex-column text-left">
                        <h4 class="mb-3">Product Sales</h4>
                        <a href="@Url.Action("CreateProductPurchase", "ProductPurchase")" class="btn btn-primary">
                            <i class="las la-plus mr-2"></i>Purchase Product
                        </a>
                    </div>
                    <div class="d-flex flex-column text-right">
                        <form asp-action="ViewPurchasesBySupplier" method="get" class="d-flex align-items-center"> 
                            <div class="col-md-6">
                                <label class="me-2 mb-0">Supplier</label>
                                <select name="SupplierId" class="form-control" asp-items="ViewBag.Suppliers"> 
                                    <option value="">Select Supplier</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-sm btn-info text-white ms-2">Filter</button>
                        </form>
                        <form asp-action="GetPurchasesByDateRangeAsync" method="get" class="d-flex align-items-end ms-3"> 
                            <div class="me-2">
                                <label class="mb-0">Start Date</label>
                                <input type="date" name="startDate" class="form-control" />
                            </div>
                            <div class="me-2">
                                <label class="mb-0">End Date</label>
                                <input type="date" name="endDate" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-sm btn-info text-white">Filter by Date</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                    <table class="data-tables table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>Batch</th>
                                <th>Supplier</th>
                                <th>Total</th>
                                <th>Purchase Date</th>
                                <th>Created By</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Batch</td>
                                    <td>@item.SupplierName</td>
                                    <td>#@item.Total.ToString("N2")</td>
                                    <td>@item.PurchaseDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.CreatedBy</td>
                                    <td>
                                        <div class="d-flex align-items-center list-action">
                                            <a asp-action="ViewProductPurchaseDetail" asp-route-id="@item.Id" class="badge badge-info me-2" data-toggle="tooltip" title="View">
                                                <i class="ri-eye-line"></i>
                                            </a>
                                            <a asp-action="EditProduct" asp-route-id="@item.Id" class="badge bg-success me-2" data-toggle="tooltip" title="Edit">
                                                <i class="ri-pencil-line"></i>
                                            </a>
                                            <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="badge bg-danger" data-toggle="tooltip" title="Delete">
                                                <i class="ri-delete-bin-line"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            } 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>